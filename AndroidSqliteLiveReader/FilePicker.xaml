<?xml version="1.0" encoding="UTF-8"?>
<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="AndroidSqliteLiveReader.FilePicker"
        WindowStartupLocation="CenterScreen"
        Title="File Picker" 
        Height="800" Width="1024">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="50"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <TreeView Grid.Row="0" Grid.ColumnSpan="3" x:Name="tree"></TreeView>
        <StackPanel Grid.Row="1" Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Select" Width="100" Height="25"  VerticalAlignment="Center" Click="SelectClicked"/>
            <Viewbox Width="15"></Viewbox>
            <Button Content="Cancel" Width="100" Height="25"  VerticalAlignment="Center" Click="CancelClicked"/>
            <Viewbox Width="25"></Viewbox>
        </StackPanel>
    </Grid>
</Window>