<UserControl x:Class="AndroidSqliteLiveReader.SqlViewControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:vsshell="clr-namespace:Microsoft.VisualStudio.Shell;assembly=Microsoft.VisualStudio.Shell.15.0"
             Background="{DynamicResource {x:Static vsshell:VsBrushes.WindowKey}}"
             Foreground="{DynamicResource {x:Static vsshell:VsBrushes.WindowTextKey}}"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300"
             Name="MyToolWindow">
    <Grid>
        <StackPanel VerticalAlignment="Center" Orientation="Vertical">
            <StackPanel Orientation="Horizontal">
                <TextBlock Width="40"  VerticalAlignment="Center" TextAlignment="Center" Height="30" HorizontalAlignment="Center">Emulator:</TextBlock>
                <TextBox Width="200" Height="30"></TextBox>
                <Button Content="Sync" Click="SyncEmulatorClick" Width="60" Height="30" x:Name="syncEmulator"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Width="40" VerticalAlignment="Center" TextAlignment="Center" Height="30" HorizontalAlignment="Center">Path:</TextBlock>
                <TextBox Width="200" Height="30"></TextBox>
                <Button Content="Sync" Click="SyncDataClick" Width="60" Height="30" x:Name="syncData"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
